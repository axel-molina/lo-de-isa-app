{
  "root": true,
  "extends": ["eslint-config-manzdev"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": ["./tsconfig.json"] },
  "plugins": ["@typescript-eslint", "react-hooks"],
  "env": {
    "browser": true
  },
  "rules": {
    "no-console": ["warn"]
  },
  "ignorePatterns": ["src/**/*.test.ts", "src/frontend/generated/*"]
}
